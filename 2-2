'''
Output
   **
  ****
 ******
********
********
 ******
  ****
   **
'''
def print_triangle(n):
    for i, j in zip(range(1, n+1), range(n, 0, -1)):
        spaces = abs(j-i)//2
        print(' ' * spaces, end="")
        asterisks = n - 2 * (abs(j-i)//2)
        print('*' * asterisks)

print_triangle(8)
